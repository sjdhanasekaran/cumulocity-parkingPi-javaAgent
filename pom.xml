<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

    <parent>
		<groupId>c8y.example</groupId>
		<artifactId>c8y-examples</artifactId>
		<version>8.19.0</version>
	</parent>

	<artifactId>c8y-jv</artifactId>
    <name>Cumulocity :: Examples :: Java Agent</name>
	<packaging>pom</packaging>

    <properties>
        <commons.io.version>2.4</commons.io.version>
        <jssc.version>2.6.0</jssc.version>
        <logback.version>1.0.13</logback.version>
        <tinkerforge.version>2.1.2</tinkerforge.version>
    </properties>

	<modules>
        <module>assembly</module>
        <module>jv-driver</module>
        <module>jv-agent</module>
        <module>piface-driver</module>
        <module>tinkerforge-driver</module>
        <module>rpi-driver</module>
        <module>mac-driver</module>
        <module>kontron-driver</module>
        <module>packages</module>
        <module>win-driver</module>
        <module>generic-linux-driver</module>
        <module>remote-access-driver</module>
        <module>parking-pi-driver</module>
	</modules>

	<dependencies>
		<dependency>
			<groupId>com.nsn.cumulocity.model</groupId>
			<artifactId>device-capability-model</artifactId>
		</dependency>
		<dependency>
			<groupId>com.nsn.cumulocity.clients-java</groupId>
			<artifactId>java-client</artifactId>
		</dependency>
        <dependency>
            <groupId>c8y.example</groupId>
            <artifactId>jv-agent-assembly</artifactId>
            <type>tar.gz</type>
            <classifier>tar</classifier>
        </dependency>

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.11</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.mockito</groupId>
			<artifactId>mockito-all</artifactId>
			<version>1.9.5</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<dependencyManagement>
		<dependencies>
            <dependency>
                <groupId>c8y.example</groupId>
                <artifactId>jv-driver</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>c8y.example</groupId>
                <artifactId>jv-agent</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>c8y.example</groupId>
                <artifactId>jv-agent-assembly</artifactId>
                <version>${project.version}</version>
                <type>tar.gz</type>
                <classifier>tar</classifier>
            </dependency>
            <dependency>
                <groupId>c8y.example</groupId>
                <artifactId>jv-agent-assembly</artifactId>
                <version>${project.version}</version>
                <type>tar.gz</type>
                <classifier>rpm</classifier>
            </dependency>
            <dependency>
                <groupId>c8y.example</groupId>
                <artifactId>jv-agent-assembly</artifactId>
                <version>${project.version}</version>
                <type>tar.gz</type>
                <classifier>deb</classifier>
            </dependency>
            <dependency>
                <groupId>c8y.example</groupId>
                <artifactId>jv-agent-assembly</artifactId>
                <version>${project.version}</version>
                <type>zip</type>
                <classifier>win</classifier>
            </dependency>
            <dependency>
                <groupId>c8y.example</groupId>
                <artifactId>jv-agent-assembly</artifactId>
                <version>${project.version}</version>
                <type>tar.gz</type>
                <classifier>mac</classifier>
            </dependency>
		</dependencies>
	</dependencyManagement>

	<build>
		<pluginManagement>
			<plugins>
                <plugin>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <dependencies>
                        <dependency>
                            <groupId>c8y.example</groupId>
                            <artifactId>jv-agent-assembly</artifactId>
                            <version>${project.version}</version>
                        </dependency>
                    </dependencies>
                    <executions>
                        <execution>
                            <id>c8y-jv-agent-assembly</id>
                            <goals>
                                <goal>single</goal>
                            </goals>
                            <phase>package</phase>
                            <configuration>
                                <descriptorRefs>
                                    <descriptorRef>c8y-jv-agent</descriptorRef>
                                </descriptorRefs>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
				<plugin>
					<artifactId>maven-dependency-plugin</artifactId>
					<version>2.6</version>
					<configuration>
						<includeScope>runtime</includeScope>
					</configuration>
				</plugin>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>rpm-maven-plugin</artifactId>
                    <version>2.1-alpha-1</version>
                </plugin>
			</plugins>
		</pluginManagement>
	</build>

</project>
